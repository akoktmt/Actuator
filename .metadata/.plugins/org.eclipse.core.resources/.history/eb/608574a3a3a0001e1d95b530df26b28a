#include "PID_Init.h"
#include "PID.h"
void PID_Init(PID_Inittypedef *PID){
	PID->PIDOut=0;
	PID->PWM=0;
	PID->TPID=0;
	PID->Temp=0;
	PID->speed=0;
}

void PID_Setup(PID_Inittypedef *PID, double Kp , double Ki, double Kd, int8_t timesample,int8_t PosLimit,int8_t NeLimit,double *setpoint){
	 PID_Init(PID);
	 PID(PID->TPID, PID->speed, PID->PIDOut,setpoint, Kp, Ki, Kd, _PID_P_ON_E, _PID_CD_DIRECT);
	 PID_SetMode(PID->TPID, _PID_MODE_AUTOMATIC);
	 PID_SetSampleTime(PID->TPID, timesample);
	 PID_SetOutputLimits(PID->TPID, NeLimit, PosLimit);
}
